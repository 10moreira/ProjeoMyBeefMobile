<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PropriedadeActivity">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="461dp"
        android:layout_gravity="right|bottom">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o nome da propriedade"
            android:id="@+id/editTextnomePropriedade" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite uma localidade"
            android:id="@+id/editText10NomeLocalidade" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText5paispropriedade"
            android:hint="Informe o pais da propriedade" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText8CidadePropriedade"
            android:hint="Informe uma cidade para a propriedade" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText9TipoPropriedade"
            android:hint="Informe o tipo da propriedade" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText5data"
            android:layout_gravity="center_horizontal"
            android:hint="  /  /     Informe a data da simulação" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar"
                android:id="@+id/button6Enviar"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:id="@+id/button7Cancelar"
                android:layout_gravity="right"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
